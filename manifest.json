
{
	"manifest_version": 2,
	"name": "TwitchLanguage",
	"description": "Twitch.tv language selector",
	"version": "1.0",
	
	"icons": {
		"128": "Language128.png"
	},
	"page_action": {
		"default_popup":"popup.html"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
        {
            "matches": ["https://twitch.tv/directory/all"],
			"run_at": "document_idle",
            "js": ["script.js"]
        }
    ],
	"permissions": [
		"activeTab",
		"storage",
		"declarativeContent"
	]
}